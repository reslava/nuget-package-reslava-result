{
  "name": "nuget-package-reslava-result",
  "version": "1.6.0",
  "private": true,
  "description": "Development tooling for REslava.Result NuGet package",
  "repository": {
    "type": "git",
    "url": "https://github.com/reslava/nuget-package-reslava-result.git"
  },
  "scripts": {
    "commit": "git-cz",
    "release": "npm run update-versions && commit-and-tag-version",
    "release:beta": "npm run update-versions:patch && commit-and-tag-version --prerelease beta",
    "release:minor": "npm run update-versions:minor && commit-and-tag-version --release-as minor",
    "release:major": "npm run update-versions:major && commit-and-tag-version --release-as major",
    "release:dry": "commit-and-tag-version --dry-run",
    "update-versions": "node scripts/update-versions.js patch",
    "update-versions:minor": "node scripts/update-versions.js minor",
    "update-versions:major": "node scripts/update-versions.js major"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "commit-and-tag-version": "^12.6.1",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
