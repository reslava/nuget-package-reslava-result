<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsPackable>false</IsPackable>
    <IsTestProject>true</IsTestProject>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>

    <!-- Enable generated file output for debugging - SHOW GENERATED FILES -->
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <CompilerGeneratedFilesOutputPath>$(ProjectDir)GeneratedFiles</CompilerGeneratedFilesOutputPath>
    
    <!-- SmartEndpoints Generation Mode Configuration -->
    <SmartEndpointsGenerationMode>File</SmartEndpointsGenerationMode>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MSTest" Version="4.0.1" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="18.0.0" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="5.0.0" />
    <PackageReference Include="coverlet.collector" Version="6.0.2">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>       
    <ProjectReference Include="..\..\src\REslava.Result.SourceGenerator\REslava.Result.SourceGenerators.csproj" />
    <ProjectReference Include="..\..\src\REslava.Result\REslava.Result.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Using Include="Microsoft.VisualStudio.TestTools.UnitTesting" />
    <Using Include="Microsoft.CodeAnalysis" />
    <Using Include="Microsoft.CodeAnalysis.CSharp" />
    <Using Include="Microsoft.CodeAnalysis.Text" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="OneOf4ToIResult\OneOf4ToIResultGeneratorTests.cs" />
    <Compile Include="SmartEndpoints\SmartEndpoints_DebugTest.cs" />
    <Compile Include="SmartEndpoints\SmartEndpoints_OneOf4_SimpleTest.cs" />    
    <Compile Include="SmartEndpoints\SmartEndpoints_BasicTests.cs" />
    <Compile Include="SmartEndpoints\SmartEndpoints_AttributeParsingTests.cs" />
    <Compile Include="SmartEndpoints\SmartEndpoints_GeneratorIntegrationTests.cs" />
    <Compile Include="SmartEndpoints\SmartEndpoints_MetadataTests.cs" />
    <Compile Include="SmartEndpoints\SmartEndpoints_RouteGenerationTests.cs" />
    <Compile Include="SmartEndpoints\SmartEndpoints_OneOf4Tests.cs" />
  </ItemGroup>

  <!-- Temporarily exclude broken test file -->
  <ItemGroup>
    <Compile Remove="SmartEndpoints\SmartEndpoints_OneOf4Tests.cs" />
  </ItemGroup>

  <!-- Prevent double compilation of generated files -->
  <ItemGroup>
    <Compile Remove="$(CompilerGeneratedFilesOutputPath)\**\*.g.cs" />
  </ItemGroup>

  <!-- Exclude generated files from compilation -->
  <ItemGroup Condition="'$(Configuration)' == 'Debug'">
    <Compile Remove="GeneratedFiles\**\*.g.cs" />
    <Compile Remove="obj\**\*.g.cs" />
  </ItemGroup>

</Project>
