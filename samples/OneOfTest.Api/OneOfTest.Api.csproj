<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    
    <!-- Enable file emission only in Debug configuration for debugging -->
    <EmitCompilerGeneratedFiles Condition="'$(Configuration)' == 'Debug'">true</EmitCompilerGeneratedFiles>
    <CompilerGeneratedFilesOutputPath Condition="'$(Configuration)' == 'Debug'">J:\src\nuget-package-reslava-result\samples\OneOfTest.Api\GeneratedFiles\$(TargetFramework)</CompilerGeneratedFilesOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="1.0.0" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="7.0.0" />
    <PackageReference Include="OneOf" Version="3.0.26" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\SourceGenerator\REslava.Result.SourceGenerators.csproj" />
    <ProjectReference Include="..\..\src\REslava.Result.csproj" />
  </ItemGroup>

  <!-- CRITICAL: Load source generators as analyzers from project reference -->
  <ItemGroup>
    <Analyzer Include="..\..\SourceGenerator\bin\Release\netstandard2.0\REslava.Result.SourceGenerators.dll" />
  </ItemGroup>

  <!-- CRITICAL: Exclude generated files from compilation to prevent double compilation errors -->
  <ItemGroup Condition="'$(Configuration)' == 'Debug'">
    <Compile Remove="J:\src\nuget-package-reslava-result\samples\OneOfTest.Api\GeneratedFiles\**\*.g.cs" />
    <Compile Remove="obj\**\*.g.cs" />
  </ItemGroup>

  <PropertyGroup>
    <!-- OneOf Generator Configuration -->
    <OneOfDefaultNamespace>Generated.OneOfExtensions</OneOfDefaultNamespace>
    <OneOfDefaultSuccessStatus>200</OneOfDefaultSuccessStatus>
    <OneOfDefaultErrorStatus>400</OneOfDefaultErrorStatus>
    <OneOfEnableProblemDetails>true</OneOfEnableProblemDetails>
    <OneOfEnableConventionMapping>true</OneOfEnableConventionMapping>
    <OneOfGenerateAllHttpMethods>true</OneOfGenerateAllHttpMethods>
  </PropertyGroup>

</Project>
