<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    
    <!-- Enable generated file output for debugging -->
    <EmitCompilerGeneratedFiles Condition="'$(Configuration)' == 'Debug'">true</EmitCompilerGeneratedFiles>
    <CompilerGeneratedFilesOutputPath Condition="'$(Configuration)' == 'Debug'">$(ProjectDir)\GeneratedFiles\$(TargetFramework)</CompilerGeneratedFilesOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="7.0.0" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="7.0.0" />
    
    <!-- ðŸ†• Use local v1.10.0 source for testing -->
    <PackageReference Include="REslava.Result" Version="1.9.0" />
  </ItemGroup>

  <ItemGroup>
    <!-- ðŸ†• Local source generator references for v1.10.0 testing -->
    <ProjectReference Include="..\..\..\SourceGenerator\REslava.Result.SourceGenerators.csproj" />
    <ProjectReference Include="..\..\..\src\REslava.Result.csproj" />
  </ItemGroup>

  <!-- Load source generators as analyzers -->
  <ItemGroup>
    <Analyzer Include="..\..\..\SourceGenerator\bin\Debug\netstandard2.0\REslava.Result.SourceGenerators.dll" />
  </ItemGroup>

  <!-- Exclude generated files from compilation -->
  <ItemGroup Condition="'$(Configuration)' == 'Debug'">
    <Compile Remove="GeneratedFiles\**\*.g.cs" />
    <Compile Remove="obj\**\*.g.cs" />
  </ItemGroup>

</Project>
