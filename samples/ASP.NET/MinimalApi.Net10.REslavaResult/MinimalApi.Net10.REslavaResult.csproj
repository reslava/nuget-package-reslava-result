<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    
    <!-- Enable generated file output for debugging - SHOW GENERATED FILES -->
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <CompilerGeneratedFilesOutputPath>$(ProjectDir)GeneratedFiles</CompilerGeneratedFilesOutputPath>
    
    <!-- ðŸ†• SmartEndpoints Generation Mode Configuration -->
    <SmartEndpointsGenerationMode Condition="'$(Configuration)' == 'Debug'">File</SmartEndpointsGenerationMode>
    <SmartEndpointsGenerationMode Condition="'$(Configuration)' == 'Release'">Cache</SmartEndpointsGenerationMode>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="7.0.0" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="7.0.0" />
    <PackageReference Include="Microsoft.AspNetCore.App" Version="7.0.0" />
    
    <!-- ðŸ†• Use local v1.10.0 source for testing -->
    <PackageReference Include="REslava.Result" Version="1.9.0" />
  </ItemGroup>

  <ItemGroup>
    <!-- ðŸ†• Local source generator references for v1.12.0 testing -->
    <ProjectReference Include="..\..\..\src\REslava.Result.SourceGenerator\REslava.Result.SourceGenerators.csproj" />
    <ProjectReference Include="..\..\..\src\REslava.Result\REslava.Result.csproj" />
  </ItemGroup>

  <!-- Load source generators as analyzers -->
  <ItemGroup>
    <Analyzer Include="..\..\..\src\REslava.Result.SourceGenerator\bin\Debug\netstandard2.0\REslava.Result.SourceGenerators.dll" />
  </ItemGroup>

  <!-- Exclude generated files from compilation -->
  <ItemGroup Condition="'$(Configuration)' == 'Debug'">
    <Compile Remove="GeneratedFiles\**\*.g.cs" />
    <Compile Remove="obj\**\*.g.cs" />
  </ItemGroup>

</Project>
